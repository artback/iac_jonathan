datacenter = "{{ consul_datacenter }}"
data_dir = "{{ consul_data_dir }}"

client_addr = "0.0.0.0"

ui_config {
  enabled = {{ consul_ui_enabled | lower }}
}

server = {{ consul_server_enabled | lower }}
bootstrap_expect = {{ consul_bootstrap_expect }}

# Use Interface for binding and advertising (Dynamically resolves IP at runtime)
bind_addr = "{{ '{{' }} GetInterfaceIP "{{ consul_bind_interface }}" {{ '}}' }}"
advertise_addr = "{{ '{{' }} GetInterfaceIP "{{ consul_advertise_interface }}" {{ '}}' }}"

retry_join = {{ consul_retry_join_ips | to_json }}